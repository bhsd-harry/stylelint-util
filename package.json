{
	"name": "@bhsd/stylelint-util",
	"version": "0.1.0",
	"homepage": "https://github.com/bhsd-harry/stylelint-util#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/stylelint-util/issues"
	},
	"license": "MIT",
	"author": "Bhsd",
	"files": [
		"/dist/"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"types": "./dist/index.d.ts",
	"sideEffects": false,
	"scripts": {
		"prepublishOnly": "npm run build",
		"build": "tsc && esbuild src/index.ts --charset=utf8 --target=es2024 --format=esm --outfile=dist/index.mjs",
		"lint:ts": "tsc --noEmit && eslint --cache .",
		"lint": "npm run lint:ts"
	},
	"dependencies": {
		"stylelint-config-recommended": "^17.0.0"
	},
	"devDependencies": {
		"@bhsd/code-standard": "^1.0.0",
		"@stylistic/eslint-plugin": "^3.1.0",
		"@types/node": "^24.0.10",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"esbuild": "^0.25.5",
		"eslint": "^8.57.1",
		"eslint-plugin-es-x": "^8.7.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^52.0.2",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-n": "^17.20.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.9.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"stylelint": "^16.23.1",
		"typescript": "^5.8.2"
	},
	"engines": {
		"node": ">=18.17.0"
	}
}
